{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "composite": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "../api/src/schema.gql"
      }
    ]
  }
}
