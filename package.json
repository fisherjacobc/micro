{
  "name": "micro",
  "version": "1.0.0",
  "repository": "https://github.com/sylv/micro.git",
  "author": "Ryan <ryan@sylver.me>",
  "license": "GPL-3.0",
  "private": true,
  "engine": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint --fix ./packages/*/src/**/*.{ts,tsx,js}",
    "build:api": "cd packages/thumbnail-generator && npm run build && cd ../api && npm run build",
    "build:web": "cd packages/web && npm run build",
    "start:api": "cd packages/api && npm run start",
    "start:web": "cd packages/web && npm run start"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "prettier": "^2.6.2"
  }
}